{
  "version": "1.0.0",
  "name": "rest-to-graphql",
  "packageManager": "yarn@4.0.0",
  "type": "module",
  "scripts": {
    "local": "run-p dev codegen:watch",
    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "start": "tsx src/index.ts",
    "codegen:watch": "npm-watch codegen:schema",
    "codegen:schema": "tsx merge-schema.ts && graphql-codegen --config codegen.ts && npm run prettier:schema",
    "codegen:oas": "tsx resources/codegen.oas.ts",
    "codegen:code": "tsx resources/codegen.code.ts",
    "prettier:schema": "prettier -w **/*.graphql src/generated",
    "test": "node --experimental-vm-modules node_modules/.bin/jest"
  },
  "watch": {
    "codegen:schema": {
      "patterns": [
        "src/schema"
      ],
      "extensions": "graphql",
      "silent": true
    }
  },
  "dependencies": {
    "@apollo/datasource-rest": "^6.0.1",
    "@apollo/server": "^4.7.5",
    "@as-integrations/fastify": "^2.0.0",
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.3.0",
    "@fastify/http-proxy": "^9.2.1",
    "dd-trace": "^4.8.0",
    "fastify": "^4.20.0",
    "graphql": "^16.8.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-scalars": "^1.22.2",
    "pino-pretty": "^10.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "4.0.1",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.0",
    "@graphql-tools/mock": "^9.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.1",
    "copyfiles": "^2.4.1",
    "edit-json-file": "^1.7.0",
    "jest": "^29.6.1",
    "key-del": "^1.3.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "openapi-to-graphql-cli": "^3.0.5",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
}
